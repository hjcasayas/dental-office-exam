{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "NodeNext",
    "outDir": "dist",
    "lib": [
      "es2022"
    ],
    "paths": {
      "@/features": [
        "../../packages/features/src/index.ts"
      ],
      "@/implementations": [
        "../../packages/implementations/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "../../packages/features/tsconfig.json"
    },
    {
      "path": "../../packages/implementations/tsconfig.json"
    }
  ]
}